<h2>プロフィール編集</h2>
<%= form_with model: @customer do |f| %>

  <div class="field">
    <%= f.label :氏名%>
    <%= f.text_field :last_name%>
    <%= f.text_field :first_name%>
  </div>

  <div class="field">
    <%= f.label :フリガナ%>
    <%= f.text_field :last_name_kana%>
    <%= f.text_field :first_name_kana%>
  </div>

  <div class="field">
    <%= f.label :電話番号%>
    <%=f.telephone_field :telephone_number%>
  </div>

  <div class="field">
    <%= f.label :住所%>
    <%=f.text_field :address%>
  </div>

  <div class="field">
    <%= f.label :郵便番号%>
    <%=f.text_field :postal_code%>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email%>
  </div>

  <%= f.submit "編集内容を保存",class:"btn btn-success" %>
  <%= link_to "退会する", unsubscrib_customer_path(current_customer.id) %>
<% end %>