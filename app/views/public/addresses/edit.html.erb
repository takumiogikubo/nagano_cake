<div class="container">
  <div class="row">
    <h4 class="mb-5 mt-5"><span class="bg-secondary">配送先編集</span></h4>
  </div>
  <div class="row">
    <div class="col-9">
      <%= form_with model: @address do |f| %>
      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code%>
      </div>

      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address%>
      </div>

      <div class="field">
        <%= f.label :宛名 %>
        <%= f.text_field :name%>
      </div>

        <%= f.submit "変更内容を保存",class:"btn btn-success btn-sm"%>
      <% end %>
    </div>
  </div>
</div>