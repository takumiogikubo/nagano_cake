<div class="container">
  <div class="row">
    <h4 class="mb-5"><span class="bg-silver">　配送先登録/一覧　</span></h4>
  </div>
  <div class="ml-n5">
    <div class="col-12 ml-n5 mb-5">
      <%= form_with model: @address do |f| %>

      <table>
        <tr>
          <th style="width:25%"><%= f.label :郵便番号（ハイフンなし） %></th>
          <td style="width:25%"><%= f.text_field :postal_code,size:25, placeholder: "0000000"%></td>
          <td style="width:25%"></td>
          <td style="width:25%"></td>
        </tr>
        <tr>
          <th><%= f.label :住所 %></th>
          <td colspan="2"><%= f.text_field :address,size:70, placeholder: "東京都渋谷区代々木神園町0-0"%></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label :宛名 %></th>
          <td><%= f.text_field :name,size:25, placeholder: "令和道子"%></td>
          <td></td>
          <td><%= f.submit "　 新規登録 　",class:"btn btn-success btn-sm bl-n5"%></td>
        </tr>
      </table>
      <% end %>
    </div>
    <div class="col-9 ml-n5">
      <table class="table table-bordered">
        <tr class="table-active">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <td class="align-middle"><%= address.postal_code%></td>
          <td class="align-middle"><%= address.address%></td>
          <td class="align-middle"><%= address.name%></td>
          <td class="text-center">
            <%= link_to " 編集する ", edit_address_path(address.id), class:"btn btn-success btn-sm" %>
            <%= link_to " 削除する ", address_path(address.id), method: :delete,class:"btn btn-danger btn-sm ml-3" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
