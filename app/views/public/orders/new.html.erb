<div class="container">
  <div class="row">
    <h4 class="mb-5 mt-5"><span class="bg-secondary">注文情報入力</span></h4>
  </div>
  <div>
    <%= form_with model:@order do |f| %>
      <h5><strong>支払方法</strong></h5>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card]  %>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

      <h5><strong>お届け先</strong></h5>

      <%= f.radio_button :address_id,"MyAddress"%>
      <%= current_customer.address_display%><br>

      <%= f.radio_button :address_id, "RegisterAddress"%>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>

      <%= f.radio_button :address_id, "NewAddress"%>
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code%><br>
        <%= f.label :住所 %>
        <%= f.text_field :address%><br>
        <%= f.label :宛名 %>
        <%= f.text_field :name%><br>

    <%= f.submit "確認画面へ進む",class:"btn btn-success btn-sm"%>
    <% end %>
  </div>

</div>






