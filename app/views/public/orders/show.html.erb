<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at%></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= '〒'+@order.postal_code%><br>
            <%= @order.address%><br>
            <%= @order.name%>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n%></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%=@order.status_i18n%></td>
        </tr>
      </table>
    </div>
    <div class="col">
      <table>
        <tr>
          <th>合計金額</th>
          <td><%= @order.total_payment.round.to_s(:delimited)%></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost%></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%=(@order.total_payment + @order.shipping_cost).round.to_s(:delimited)%></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <table>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      <% @order_details.each do |order_detail|%>
      <tr>
        <td><%= order_detail.item.name%></td>
        <td><%= (order_detail.price*1.10).round.to_s(:delimited)%></td>
        <td><%= (order_detail.price*1.10).round.to_s(:delimited)%></td>
        <td><%= ((order_detail.price*1.10)*(order_detail.amount)).round.to_s(:delimited)%></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>