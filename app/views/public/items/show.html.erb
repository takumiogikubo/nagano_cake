<div class="container pt-5">
  <div class="row">
    <div class="col-2">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre|%>
        <tr>
          <td><%= link_to genre.name,items_path(genre_id: genre.id),class:"text-secondary"%></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-3">
      <% if @item.image.attached?%>
      <%=image_tag @item.image, size:"250x200" %>
    <% else %>
      <%=image_tag 'no_image',size:"250x200"%>
    <% end %>
    </div>
    <div class="col-7">
      <td><p><%= @item.name %></p></td>
      <td><P><%= @item.introduction %></P></td>
      <td><p>¥<%= (@item.price*1.10).round.to_s(:delimited) %>(税込)</p></td>

      <%= form_with model: @cart_item do |f| %>

      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.select :amount,*[1..10]%>
      <%= f.submit 'カートに入れる',class:"btn btn-success"%>

      <%end%>
    </div>
  </div>
</div>