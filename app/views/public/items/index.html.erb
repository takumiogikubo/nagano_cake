<div class="container">
  <div class="row">
    <div class="col-2">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre|%>
        <tr>
          <td><%= link_to genre.name,items_path(genre_id: genre.id),class:"text-secondary"%></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-10">
      <h3><%= @item.genre.name%>一覧</h3><p>（全<%= @items.count%>件）</p>
        <div class="d-flex flex-wrap justify-content-start">
            <% @items.each do |item|%>
            <div>
              <% if item.image.attached?%>
                <%= image_tag item.image,size:"200x150"%>
              <% else %>
                <%= image_tag 'no_image',size:"200x150"%>
              <% end %><br>
              <%= item.name%>
              <p>¥<%= item.price.to_s(:delimited)%></p>
            </div>
          <% end %>
        </div>
        <div>
        <%= paginate @items%>
        </div>
    </div>
  </div>
</div>