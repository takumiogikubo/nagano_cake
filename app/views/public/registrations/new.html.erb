<div class="container">
  <div class="row">
    <h4 class="mb-5"><span class="bg-silver">　新規会員登録　</span></h4>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="table table-borderless table-sm">
      <tr>
        <th><%= f.label :名前%></th>
        <td><%= f.label :（姓）%></td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "（姓）", placeholder: "令和"%></td>
        <td><%= f.label :（名）%></td>
        <td><%= f.text_field :first_name, autofocus: true, autocomplete: "（名）", placeholder: "道子"%></td>
      </tr>
      <tr>
        <th><%= f.label :フリガナ%></th>
        <td><%= f.label :（セイ）%></td>
        <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "（セイ）", placeholder: "レイワ"%></td>
        <td><%= f.label :（メイ）%></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "（メイ）", placeholder: "ミチコ"%></td>
      </tr>
      <tr>
        <th><%= f.label :メールアドレス %></th>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", placeholder: "sample@example.com" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :郵便番号（ハイフンなし）%></th>
        <td></td>
        <td><%=f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号（ハイフンなし）", placeholder: "0000000"%></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :住所%></th>
        <td></td>
        <td colspan="3"><%=f.text_field :address,size:55, autofocus: true, autocomplete: "住所", placeholder: "東京都渋谷区代々木神園町0-0"%></td>
      </tr>
      <tr>
        <th><%= f.label :電話番号（ハイフンなし）%></th>
        <td></td>
        <td><%=f.telephone_field :telephone_number, autofocus: true, autocomplete: "電話番号（ハイフンなし）", placeholder: "0000000000"%></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          （<%= @minimum_password_length %> 文字以上）
          <% end %>
        </th>
        <td></td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :パスワード（確認用） %></th>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th></th>
        <td></td>
        <td><%= f.submit "新規登録",class:"btn btn-success" %></td>
        <td></td>
        <td></td>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="row">
    <h4><span class="bg-silver">既に登録済みの方</span></h4>
  </div>
  <div class="row">
    <p class="pl-5"><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
  </div>
</div>