<div class="container">
  <div class="row">
    <h4 class="mb-5 mt-5"><span class="bg-secondary">ジャンル<strong>一覧・追加</strong></span></h4>
  </div>
  <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
  <div class="row">
    <div class="col-2">
      <%= f.label :ジャンル名 %>
    </div>
    <div class="col-3">
      <%= f.text_field :name %>
    </div>
    <div class="col-2">
      <%= f.submit '新規投稿',class:"btn btn-success"%>
    </div>
  </div>
  <% end %>
  <div class="row mt-5">
    <div class="col-4">
      <table class="table">
          <tr class="thead-light">
            <th colspan="2">ジャンル</th>
          </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre),class:"btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

