<div class="container">
  <div class="row">
    <h4 class="mb-5"><span class="bg-silver">商品新規登録</span></h4>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
      <table>
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.file_field :image,accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name, size:40, placeholder: "商品名" %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :introduction, size: "39x5", placeholder: "ここに説明文を記述します" %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "--選択してください--",size:35 }%></td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.text_field :price, size:40, placeholder: "1000" %>円</td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス%></td>
          <td>
            <%= f.radio_button :is_active,"true"%>
            <%= f.label :is_active,"販売中",value:"true"%>
            <%= f.radio_button :is_active,"false"%>
            <%= f.label :is_active,"販売停止中",value:"false"%>
          </td>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto"><%= f.submit '新規登録',class:"btn btn-success"%></div>
  </div>
      <% end %>
</div>