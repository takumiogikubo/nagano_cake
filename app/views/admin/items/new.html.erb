<div class="container">
  <div class="row">
    <h4 class="mb-5 mt-5"><span class="bg-secondary">商品新規登録</span></h4>
  </div>
  <div class="row">
    <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
    <%= f.label :商品画像 %><%= f.file_field :image,accept: "image/*" %><br>
    <%= f.label :商品名 %><%= f.text_field :name %><br>
    <%= f.label :商品説明 %><%= f.text_area :introduction %><br>
    <%= f.label :ジャンル %><%= f.collection_select :genre_id, Genre.all, :id, :name  %><br>
    <%= f.label :税抜価格 %><%= f.text_field :price %><br>
    <%= f.label :販売ステータス%><%= f.radio_button :is_active, :sale %><%= f.label :販売中%>
    <%= f.radio_button :is_active, :stop_selling%><%= f.label :販売停止中%><br>
    <%= f.submit '新規登録',class:"btn btn-success"%>
    <% end %>
  </div>
</div>