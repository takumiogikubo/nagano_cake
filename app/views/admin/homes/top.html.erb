<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order|%>
  <tr>
    <td><%= order.created_at%></td>
    <td><%= order.customer.last_name%><%= order.customer.first_name%></td>
    <td>
      <% total = 0%>
      <% order.order_details.each do |order_detail|%>
      <% subtotal = order_detail.amount%>
      <% total += subtotal %>
      <%end%>
      <%= total %>
    </td>
    <td><%= order.status_i18n%></td>
  </tr>
  <%end%>
</table>